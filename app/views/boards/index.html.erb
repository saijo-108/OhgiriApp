<% content_for(:title, t('.title')) %>
<div class="bg-koruku">
  <div class="container pt-3">
    <div class="top-change">
      <p class="title-size">大喜利一覧</p>
      <div class="row">
        <div class="col-lg-10 offset-lg-1">
          <!-- 検索フォーム -->
          <form>
            <div class="input-group mb-3"><input class="form-control" placeholder="キーワードから検索" type="search"/>
              <div class="input-group-append"><%= image_submit_tag("search.png", class:"btn btn-search") %></div>
            </div>
          </form>
        </div>
      </div>
      <!-- 大喜利一覧 -->
      <div class="row">
        <div class="col-12">
          <div class="row">
            <% if @boards.present? %>
              <%= render @boards %>
            <% else %>
              <p><%= t('.no_result') %></p>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>